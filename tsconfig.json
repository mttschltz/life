{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "preserve",
      "lib": ["es2020"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true, // disabled because gatsby-plugin-typegen exports global types
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "alwaysStrict": true,
      "noUnusedParameters": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": false,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "@component/*": ["./lib/component/*"],
        "@life/*": ["./lib/life/src/*"],
        "@matt-fyi/*": ["./app/matt-fyi/src/*"],
        "@store/*": ["./app/store/src/*"],
        "@util/*": ["./lib/util/*"],
      }
    }
  }