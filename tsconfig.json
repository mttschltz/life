{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "preserve",
      "lib": ["dom", "es2015", "es2017"],
      "strict": true,
      "noEmit": true,
      // "isolatedModules": true, // disabled because gatsby-plugin-typegen exports global types
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "paths": {
        "@store": ["./app/store/src"],
        "@store/*": ["./app/store/src/*"],
        "@util": ["./lib/util"],
        "@util/*": ["./lib/util/*"],
      }
    }
  }